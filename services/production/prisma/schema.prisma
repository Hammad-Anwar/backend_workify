// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:pass@host.docker.internal:5434/inven?schema=public"
}

model customers {
  customer_id      Int       @id @unique(map: "customer_id_UNIQUE") @default(autoincrement())
  customer_name    String    @db.VarChar(75)
  customer_email   String?   @db.VarChar(120)
  customer_phone   String    @db.VarChar(120)
  customer_address String    @db.VarChar(150)
  createdAt        DateTime? @default(now())
}

model products {
  product_id    Int    @id @unique(map: "product_id_UNIQUE") @default(autoincrement())
  product_name  String @db.VarChar(120)
  product_price Float
  category_name  String @db.VarChar(120)
  brand_name     String @db.VarChar(120)
}
